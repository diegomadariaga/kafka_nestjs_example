# =================================
# CONFIGURACIÓN PARA PRODUCCIÓN
# =================================

# Entorno general
NODE_ENV=production
COMPOSE_PROJECT_NAME=kafka-nestjs-microservices-prod

# =================================
# PUERTOS DE SERVICIOS
# =================================
GATEWAY_PORT=80
USERS_SERVICE_PORT=3001
NOTIFICATIONS_SERVICE_PORT=3002

# =================================
# CONFIGURACIÓN DE KAFKA
# =================================
KAFKA_PORT=9092
KAFKA_BROKER_ID=1
KAFKA_OFFSETS_TOPIC_REPLICATION_FACTOR=3
KAFKA_AUTO_CREATE_TOPICS_ENABLE=false

# Configuración interna de Kafka
KAFKA_ADVERTISED_LISTENERS=PLAINTEXT://kafka:9092
KAFKA_LISTENER_SECURITY_PROTOCOL_MAP=PLAINTEXT:PLAINTEXT
KAFKA_INTER_BROKER_LISTENER_NAME=PLAINTEXT

# =================================
# CONFIGURACIÓN DE ZOOKEEPER
# =================================
ZOOKEEPER_CLIENT_PORT=2181
ZOOKEEPER_TICK_TIME=2000

# =================================
# VARIABLES ESPECÍFICAS DE SERVICIOS
# =================================

# Users Service
USERS_KAFKA_CLIENT_ID=users-service-prod
USERS_DB_HOST=users-db
USERS_DB_PORT=5432
USERS_DB_NAME=users_prod

# Notifications Service
NOTIFICATIONS_KAFKA_CLIENT_ID=notifications-service-prod
NOTIFICATIONS_DB_HOST=notifications-db
NOTIFICATIONS_DB_PORT=5432
NOTIFICATIONS_DB_NAME=notifications_prod

# =================================
# CONFIGURACIÓN DE CORREO (Notificaciones)
# =================================
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your-sendgrid-api-key

# =================================
# CONFIGURACIÓN DE PRODUCCIÓN
# =================================
# Desactivar polling para producción
CHOKIDAR_USEPOLLING=false
WATCHPACK_POLLING=false
