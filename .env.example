# Configuración del Monorepo de Microservicios

# Puerto del API Gateway
GATEWAY_PORT=80

# Puertos de los microservicios
USERS_SERVICE_PORT=3001
NOTIFICATIONS_SERVICE_PORT=3002

# Configuración de la aplicación
NODE_ENV=development

# Configuración de Kafka
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID_USERS=users-service
KAFKA_CLIENT_ID_NOTIFICATIONS=notifications-service

# Configuración de Zookeeper
ZOOKEEPER_CLIENT_PORT=2181
ZOOKEEPER_TICK_TIME=2000

# Configuración de Kafka interna
KAFKA_BROKER_ID=1
KAFKA_OFFSETS_TOPIC_REPLICATION_FACTOR=1
KAFKA_AUTO_CREATE_TOPICS_ENABLE=true

# Variables de servicios individuales
# Users Service
USERS_DB_HOST=localhost
USERS_DB_PORT=5432
USERS_DB_NAME=users_db

# Notifications Service  
NOTIFICATIONS_DB_HOST=localhost
NOTIFICATIONS_DB_PORT=5433
NOTIFICATIONS_DB_NAME=notifications_db

# Configuración de correo (para notificaciones)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
